@page
@model control.personal.Pages.Registro.EditModel

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>

<body>

    <h4>Registro</h4>
    <hr />
    <form method="post" class="container">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Registro.FechaHora" class="control-label"></label>
                    <input asp-for="Registro.FechaHora" class="form-control" readonly />
                    <span asp-validation-for="Registro.FechaHora" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Registro.Usuario.Nombre" class="control-label"></label>
                    <input asp-for="Registro.Usuario.Nombre" class="form-control" readonly />
                    <span asp-validation-for="Registro.Usuario.Nombre" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group form-check">
                    <input asp-for="Registro.ControlIngresos.UniformeCompleto" class="form-check-input" />
                    <label asp-for="Registro.ControlIngresos.UniformeCompleto" class="form-check-label"></label>
                    <span asp-validation-for="Registro.ControlIngresos.UniformeCompleto" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group form-check">
                    <input asp-for="Registro.ControlIngresos.UniformeLimpio" class="form-check-input" />
                    <label asp-for="Registro.ControlIngresos.UniformeLimpio" class="form-check-label"></label>
                    <span asp-validation-for="Registro.ControlIngresos.UniformeLimpio" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group form-check">
                    <input asp-for="Registro.ControlIngresos.UniformeColocadoBien" class="form-check-input" />
                    <label asp-for="Registro.ControlIngresos.UniformeColocadoBien" class="form-check-label"></label>
                    <span asp-validation-for="Registro.ControlIngresos.UniformeColocadoBien" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <div class="form-group form-check">
                    <input asp-for="Registro.ControlIngresos.ManoLimpias" class="form-check-input" />
                    <label asp-for="Registro.ControlIngresos.ManoLimpias" class="form-check-label"></label>
                    <span asp-validation-for="Registro.ControlIngresos.ManoLimpias" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group form-check">
                    <input asp-for="Registro.ControlIngresos.ManoSinAccesorios" class="form-check-input" />
                    <label asp-for="Registro.ControlIngresos.ManoSinAccesorios" class="form-check-label"></label>
                    <span asp-validation-for="Registro.ControlIngresos.ManoSinAccesorios" class="text-danger"></span>
                </div>
            </div>
            <div class="col">

            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group ">
                    <label asp-for="Registro.ControlIngresos.Observaciones" class="control-label"></label>
                    <textarea asp-for="Registro.ControlIngresos.Observaciones" class="form-control"></textarea>
                    <span asp-validation-for="Registro.ControlIngresos.Observaciones" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 col-3"></div>
            <div class="col-4 text-right">
                <label asp-for="Registro.ControlIngresos.Responsable" class="form-control-plaintext"></label>
            </div>
            <div class="col-sm-4 col-5">
                <input type="text" asp-for="Registro.ControlIngresos.Responsable" readonly
                    value='@ViewBag.nombreUsuario' class="form-control-plaintext">
                <span asp-validation-for="Registro.ControlIngresos.Responsable" class="text-danger"></span>
            </div>
        </div>
        <div class="row container">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div>
                <a class="btn btn-link" asp-page="./Index">Back to List</a>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Registro.id" />
            <input type="hidden" asp-for="Registro.ControlIngresos.IdRegistro" value="@Model.Registro.id" />
        </div>
    </form>

</body>

</html>
